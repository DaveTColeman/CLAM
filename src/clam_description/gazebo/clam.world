<gazebo version="1.2">
  <world name="clam_arm_world">
    <scene>
      <ambient>0.5 0.5 0.5 1</ambient>
      <background>0.5 0.5 0.5 1</background>
      <shadows>false</shadows>
      <grid>true</grid>
    </scene>

    <physics type="ode">
      <update_rate>1.0</update_rate> <!-- TODO: lower this from as fast as possible -->
      <gravity>0 0 -9.8</gravity>
    </physics>

    <model name="clam_arm">
      <static>false</static>

      <!-- tabletop ||||||||||||||||||||||||||||||||||||||||||||||||| -->

      <joint name="tabletop_joint" type="revolute">
        <parent>world</parent>
        <child>tabletop_link</child>
	<pose>0 0 0 0 0 0</pose>
        <axis>
          <limit>
            <lower>0</lower>
            <upper>0</upper>
          </limit>
          <xyz>0 0 1</xyz>
        </axis>
      </joint>

      <link name="tabletop_link">
        <gravity>true</gravity>

        <inertial>
          <pose>0 0 -0.017 1.570795 0 1.570795</pose>
          <inertia>
            <ixx>1.11</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>100.11</iyy>
            <iyz>0</iyz>
            <izz>1.01</izz>
          </inertia>
          <mass>101.0</mass>
        </inertial>

        <collision name="tabletop_geom">
          <pose>0 0 -0.017 1.570795 0 1.570795</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/tabletop.STL</uri>
            </mesh>
          </geometry>
        </collision>

        <visual name="tabletop_visual">
          <pose>0 0 -0.017 1.570795 0 1.570795</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/tabletop.STL</uri>
            </mesh>
          </geometry>
          <material>
            <script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Blue</name></script>
          </material>
        </visual>

      </link>

      <!-- base ||||||||||||||||||||||||||||||||||||||||||||||||| -->

      <joint name="base_joint" type="revolute">
        <parent>tabletop_link</parent>
        <child>base_link</child>
	<pose>0 0 0 0 0 0</pose>
        <axis>
          <limit>
            <lower>0</lower>
            <upper>0</upper>
          </limit>
          <xyz>0 0 1</xyz>
        </axis>
      </joint>

      <link name="base_link">
        <gravity>true</gravity>

        <inertial>
          <pose>0 0 0 1.570795 0 0</pose>
          <inertia>
            <ixx>1.11</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>100.11</iyy>
            <iyz>0</iyz>
            <izz>1.01</izz>
          </inertia>
          <mass>10.0</mass>
        </inertial>

        <collision name="base_geom">
          <pose>0 0 0 1.570795 0 0</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/base_link.STL</uri>
            </mesh>
          </geometry>
        </collision>

        <visual name="base_visual">
          <pose>0 0 0 1.570795 0 0</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/base_link.STL</uri>
              <scale>0.001 0.001 0.001</scale>
            </mesh>
          </geometry>
          <material>
            <script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Red</name></script>
          </material>
        </visual>

      </link>

      <!-- shoulder_pan ||||||||||||||||||||||||||||||||||||||||||||||||| -->

      <joint name="shoulder_pan_joint" type="revolute">
        <parent>base_link</parent>
        <child>shoulder_pan_link</child>
	<pose>0 0 0.05 0 0 1.570795</pose>
        <axis>
          <limit>
            <lower>-2.61799387799</lower>
            <upper>1.98394848567</upper>
          </limit>
          <xyz>1 0 0</xyz>
        </axis>
      </joint>

      <link name="shoulder_pan_link">
        <gravity>true</gravity>

        <inertial>
          <pose>0 0 0 0 0 1.570795</pose>
          <inertia>
            <ixx>1.11</ixx>
            <ixy>0</ixy>
            <ixz>0</ixz>
            <iyy>100.11</iyy>
            <iyz>0</iyz>
            <izz>1.01</izz>
          </inertia>
          <mass>10.0</mass>
        </inertial>

        <collision name="shoulder_pan_geom">
          <pose>0 0 0 0 0 1.570795</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/shoulder_pan_link.STL</uri>
            </mesh>
          </geometry>
        </collision>

        <visual name="shoulder_pan_visual">
          <pose>0 0 0 0 0 1.570795</pose>
          <geometry>
            <mesh>
              <uri>model://clam_arm/stl/shoulder_pan_link.STL</uri>
              <scale>0.001 0.001 0.001</scale>
            </mesh>
          </geometry>
          <material>
            <!--script><uri>file://media/materials/scripts/gazebo.material</uri><name>Gazebo/Yellow</name></script-->
	    <ambient>1.0 0.423529411765 0.0392156862745 1.0</ambient>
          </material>
        </visual>

      </link>


    </model>

  </world>
</gazebo>

